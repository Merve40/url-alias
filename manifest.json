{
    "name": "Shortcut",
    "description" : "Shortcut allows the user to define a short alias for a url, in order to access websites faster.",
    "homepage_url": "https://github.com/merve40/url-shortcut",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": ["storage", "tabs", "webNavigation", "webRequest"],
    "background": {
        "scripts": ["trigger.js"],
        "persistent": false
    },
    "icons": {
        "48": "icons/icon-48.png"
    },
    "browser_specific_settings": {
        "gecko": {
          "id": "shortcut@mrvshn40.com",
          "strict_min_version": "42.0"
        }
    },
    "browser_action": {
        "default_icon": "icons/icon-48.png",
        "default_title": "Shortcut",
        "default_popup": "popup.html",
        "browser_style": true
    }
}